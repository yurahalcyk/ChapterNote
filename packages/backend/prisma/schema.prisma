generator client {
  provider = "prisma-client"
  output   = "../prisma-output/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  books    Book[]
}

model Book {
  id        String   @id @default(uuid())
  title     String
  author    String
  chapters  Int
  pages     Int?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id        String   @id @default(uuid())
  chapter   Int
  content   String
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
