  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Debug (tsx)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["watch", "src/server.ts"],
      // VS Code will treat the backend folder as the “working directory”, so tsx loads the correct tsconfig, source maps, and paths.
      "cwd": "${workspaceFolder}/packages/backend",
      "console": "integratedTerminal",
      "sourceMaps": true,
    //   "skipFiles": ["<node_internals>/**"],
    //   "program": "${workspaceFolder}\\packages\\backend\\src\\controllers\\user-controller.ts",
    //   "outFiles": ["${workspaceFolder}/**/*.js"]
